{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "src/*.d.ts",
    "test/**/*",
    "*.config.ts",
    "*.config.js"
  ],
  "exclude": ["dist", "node_modules"]
}
