    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "openai": "^4.104.0",
    "prom-client": "^15.1.3",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
