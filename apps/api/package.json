{
  "name": "@prompt-lab/app-api",
  "private": true,
  "version": "0.0.0",
  "description": "Backend API for Prompt Lab - handles AI model integrations and job processing",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc --pretty false",
    "lint": "eslint . --max-warnings 0 --quiet",
