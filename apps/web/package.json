{
  "name": "@prompt-lab/web",
  "private": true,
  "version": "0.0.0",
  "description": "React web interface for Prompt Lab - AI model testing and evaluation platform",
  "type": "module",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rimraf dist",
    "test": "NODE_ENV=test vitest run --reporter=dot",
    "test:browser": "NODE_ENV=test VITEST_BROWSER=true vitest run --reporter=dot",
    "test:summary": "vitest run --reporter=dot --reporter.summary=false",
    "test:quiet": "npm run test --silent || true",
    "test:verbose": "vitest run --reporter=verbose",
    "lint": "eslint . --max-warnings 0 --quiet",
    "tsc": "tsc -p tsconfig.json --noEmit --pretty false",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@prompt-lab/shared-types": "workspace:*",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.81.5",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-diff-viewer-continued": "^3.4.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.0.2",
    "tiktoken": "^1.0.21",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@storybook/addon-a11y": "9.0.15",
    "@storybook/addon-docs": "9.0.15",
    "@storybook/addon-vitest": "9.0.15",
    "@storybook/react-vite": "9.0.15",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint-plugin-storybook": "9.0.15",
    "markdown-to-jsx": "^7.7.10",
    "playwright": "^1.53.2",
    "storybook": "9.0.15",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^3.2.4"
  }
}
