{
  "name": "prompt-lab",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter api run dev",
    "dev:web": "pnpm --filter web run dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "tsc": "pnpm exec tsc --noEmit -p tsconfig.json",
    "test": "pnpm tsc && vitest run --coverage",
    "test:e2e": "echo \"No e2e tests yet\"",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "lint:data": "node scripts/lint-jsonl.cjs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5",
    "vite": "7.0.0",
    "vitest": "1.5.0",
    "@vitest/coverage-istanbul": "1.5.0"
  }
}
