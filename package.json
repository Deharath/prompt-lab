{
  "name": "prompt-lab",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @prompt-lab/app-api run dev",
    "dev:web": "pnpm --filter web run dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "tsc": "pnpm -r tsc",
    "test": "vitest run --coverage --config vitest.config.mts && pnpm --filter web test",
    "test:e2e": "pnpm exec vitest run apps/api/test/e2e.test.ts",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "lint:data": "node scripts/lint-jsonl.cjs",
    "build:api": "pnpm --filter @prompt-lab/app-api run build",
    "docker:run": "docker build -t promptlab:latest . && docker run -d -p 3000:3000 promptlab:latest",
    "clean": "pnpm -r clean || true && rimraf node_modules pnpm-lock.yaml dist packages/*/dist apps/*/dist",
    "audit": "pnpm audit --audit-level moderate",
    "audit:fix": "pnpm audit --fix",
    "deps:check": "depcheck --ignores='@types/*,@testing-library/*,@vitejs/*,@vitest/*,eslint-*,@eslint/*,typescript,react-dom,better-sqlite3,get-port,rimraf,supertest' --ignore-patterns='scripts/**/*'",
    "deps:update": "pnpm update --recursive --latest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.23",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "better-sqlite3": "^12.1.1",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "eslint": "^9.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "0.5.4",
    "get-port": "^7.1.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.1",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.4",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "vite": "7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ],
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
