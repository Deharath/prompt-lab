{
  "compilerOptions": {
    "target": "ES2019",
    "module": "Node16",
    "strict": true,
    "moduleResolution": "node16",
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["apps/**/*", "packages/**/*", "vitest.config.mts"]
}
