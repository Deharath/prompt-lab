{
  "compilerOptions": {
    "target": "ES2019",
    "module": "Node16",
    "strict": true,
    "moduleResolution": "node16",
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@prompt-lab/evaluator": ["packages/evaluator/src/index.ts"],
      "@prompt-lab/providers": ["providers/index.ts"],
      "@prompt-lab/providers/*": ["providers/*"],
      "@prompt-lab/jobs": ["jobs/index.ts"],
      "@prompt-lab/jobs/*": ["jobs/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "providers/**/*",
    "jobs/**/*",
    "scripts/**/*",
    "vitest.config.mts"
  ],
  "exclude": []
}
