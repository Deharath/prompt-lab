# Prompt Lab example environment (safe defaults)

# Database (standardized path)
DATABASE_URL=sqlite://./db/db.sqlite

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Providers (optional in dev; fill in if needed)
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_JOBS_MAX=50

# Evaluation settings
EVALUATION_TIMEOUT_MS=15000
EVALUATION_CONCURRENCY=5
EVALUATION_MAX_CASES=1000

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5

# Security
REQUEST_SIZE_LIMIT=1mb
TRUST_PROXY=false

# Feature flags
WORKER_ENABLED=false

