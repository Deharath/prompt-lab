# Example environment variables for PromptLab
# Copy this file to .env and fill in the values

# API keys (do not commit real secrets)
OPENAI_API_KEY=
GEMINI_API_KEY=

# Database
DATABASE_URL=sqlite://./db.sqlite

# Web server
PORT=3000

# Server host (default is 0.0.0.0; leave unset for normal dev)
# HOST=0.0.0.0

# OpenAI configuration
OPENAI_TIMEOUT_MS=15000
OPENAI_MAX_RETRIES=3
OPENAI_DEFAULT_MODEL=gpt-4o-mini

# Gemini configuration
GEMINI_TIMEOUT_MS=15000
GEMINI_MAX_RETRIES=3

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_JOBS_MAX=50

# Evaluation settings
EVALUATION_TIMEOUT_MS=15000
EVALUATION_CONCURRENCY=5
EVALUATION_MAX_CASES=1000

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5

# Security
REQUEST_SIZE_LIMIT=1mb
TRUST_PROXY=false

# Database connection pool
DB_MAX_CONNECTIONS=10

